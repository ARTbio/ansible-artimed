<?xml version="1.0"?>
<!-- Modify this file as wanted and copy it as job_conf.xml.j2 in roles/galaxyprojectdotorg.galaxy-extras/templates/ -->
<!-- in replacement of the existing job_conf.xml.j2 -->
<job_conf>
    <plugins workers="2">
        <plugin id="slurm" type="runner" load="galaxy.jobs.runners.slurm:SlurmJobRunner">
            <param id="drmaa_library_path">/usr/lib/slurm-drmaa/lib/libdrmaa.so</param>
        </plugin>
        <plugin id="local" type="runner" load="galaxy.jobs.runners.local:LocalJobRunner"/>
    </plugins>
    <!-- The default handler can be changed by specifying the GALAXY_HANDLERS_DEFAULT environment variable. -->
    <handlers default_from_environ="GALAXY_HANDLERS_DEFAULT" default="handlers">
              <handler id="handler0" tags="handlers"/>
            <handler id="handler1" tags="handlers"/>
            <handler id="handler2" tags="handlers"/>
            <handler id="handler3" tags="handlers"/>
          </handlers>
    <!-- The default destination can be changed by specifying the GALAXY_DESTINATIONS_DEFAULT environment variable. -->
    <destinations default="slurm_cluster">
        <destination id="slurm_cluster" runner="slurm">
            <env file="/home/galaxy/galaxy/.venv/bin/activate"/>
            <param id="enabled" from_environ="GALAXY_RUNNERS_ENABLE_SLURM">true</param>
            <param id="nativeSpecification">--partition=debug --ntasks=1 --share</param>
        </destination>
        <destination id="slurm_cluster_2" runner="slurm">
            <env file="/home/galaxy/galaxy/.venv/bin/activate"/>
            <param id="enabled" from_environ="GALAXY_RUNNERS_ENABLE_SLURM">true</param>
            <param id="nativeSpecification">--partition=debug --ntasks=2 --share</param>
        </destination>
        <destination id="slurm_cluster_4" runner="slurm">
            <env file="/home/galaxy/galaxy/.venv/bin/activate"/>
            <param id="enabled" from_environ="GALAXY_RUNNERS_ENABLE_SLURM">true</param>
            <param id="nativeSpecification">--partition=debug --ntasks=4 --share</param>
        </destination>
        <destination id="slurm_cluster_8" runner="slurm">
            <env file="/home/galaxy/galaxy/.venv/bin/activate"/>
            <param id="enabled" from_environ="GALAXY_RUNNERS_ENABLE_SLURM">true</param>
            <param id="nativeSpecification">--partition=debug --ntasks=8 --share</param>
        </destination>
    </destinations>
    <limits>
    </limits>
    <tools>
        <tool id="bowtie2" destination="slurm_cluster_8"/>
        <tool id="bowtie-align" destination="slurm_cluster_8"/>
        <tool id="bowtie_wrapper" destination="slurm_cluster_8"/>
        <tool id="deseq2" destination="slurm_cluster_2"/>
        <tool id="fastqc" destination="slurm_cluster_2"/>
        <tool id="featurecounts" destination="slurm_cluster_2"/>
        <tool id="samtools_flagstat" destination="slurm_cluster_2"/>
        <tool id="samtools_idxstats" destination="slurm_cluster_2"/>
        <tool id="small_rna_maps" destination="slurm_cluster_8"/>
        <tool id="small_rna_signatures" destination="slurm_cluster_8"/>
        <tool id="sr_bowtie" destination="slurm_cluster_8"/>
        <tool id="sr_bowtie_dataset_annotation" destination="slurm_cluster_8"/>
    </tools>
</job_conf>
